{
    "name": "Fire Blast",
    "description": "Hold your secondary power to charge, release to launch a destructive ball of plasma in the direction you're looking.",
    "badges": [
        {
            "type": "origins:tooltip",
            "text": [
                "Hold [",
                {
                    "keybind": "key.origins.secondary_active"
                },
                "] to charge, release to fire"
            ],
            "sprite": "minecraft:textures/particle/flame.png"
        }
    ],
    "type": "origins:multiple",
    "fireball": {
        "condition": {
            "type": "origins:and",
            "conditions": [
                {
                    "type": "origins:or",
                    "conditions": [
                        {
                            "type": "origins:resource",
                            "resource": "ponyorigins:common/00_key_secondary_active",
                            "comparison": "==",
                            "compare_to": 0
                        },
                        {
                            "type": "origins:power",
                            "power": "ponyorigins:chaos/chaos"
                        }
                    ]
                },
                {
                    "type": "origins:resource",
                    "resource": "*:*_charged",
                    "comparison": "==",
                    "compare_to": 1
                }
            ]
        },
        "type": "origins:action_over_time",
        "interval": 15,
        "entity_action": {
            "type": "origins:and",
            "actions": [
                {
                    "type": "origins:if_else",
                    "condition": {
                        "inverted": true,
                        "type": "origins:submerged_in",
                        "fluid": "minecraft:water"
                    },
                    "if_action": {
                        "type": "apugli:fire_projectile",
                        "entity_type": "minecraft:fireball",
                        "count": 1,
                        "speed": 1,
                        "divergence": 1,
                        "sound": "minecraft:entity.ghast.shoot"
                    },
                    "else_action": {
                        "type": "origins:and",
                        "actions": [
                            {
                                "type": "origins:execute_command",
                                "command": "execute anchored eyes positioned ^ ^0.5 ^0.5 run particle minecraft:bubble_column_up ~ ~ ~ 0.1 0.1 0.1 1 64 force"
                            },
                            {
                                "type": "origins:play_sound",
                                "sound": "minecraft:block.bubble_column.upwards_inside",
                                "volume": 1,
                                "pitch": 1
                            },
                            {
                                "type": "origins:explode",
                                "power": 1,
                                "destruction_type": "break",
                                "damage_self": true
                            }
                        ]
                    }
                },
                {
                    "type": "origins:change_resource",
                    "resource": "*:*_buffer",
                    "change": -15,
                    "operation": "add"
                }
            ]
        }
    },
    "buffer": {
        "type": "origins:resource",
        "min": 0,
        "max": 15,
        "start_value": 0,
        "hud_render": {
            "should_render": true,
            "sprite_location": "origins:textures/gui/resource_bar.png",
            "bar_index": 7,
            "condition": {
                "type": "origins:resource",
                "resource": "*:*_buffer",
                "comparison": ">",
                "compare_to": 0
            }
        },
        "min_action": {
            "type": "origins:change_resource",
            "resource": "*:*_charged",
            "change": 0,
            "operation": "set"
        },
        "max_action": {
            "type": "origins:change_resource",
            "resource": "*:*_charged",
            "change": 1,
            "operation": "set"
        }
    },
    "cd": {
        "type": "origins:resource",
        "min": 0,
        "max": 1,
        "start_value": 0
    },
    "cd_timer": {
        "condition": {
            "type": "origins:resource",
            "resource": "*:*_cd",
            "comparison": ">",
            "compare_to": 0
        },
        "type": "origins:action_over_time",
        "interval": 20,
        "entity_action": {
            "type": "origins:change_resource",
            "resource": "*:*_cd",
            "change": -1,
            "operation": "add"
        }
    },
    "buffer_return": {
        "condition": {
            "type": "origins:and",
            "conditions": [
                {
                    "type": "origins:resource",
                    "resource": "*:*_buffer",
                    "comparison": ">",
                    "compare_to": 0
                },
                {
                    "type": "origins:resource",
                    "resource": "ponyorigins:common/00_key_secondary_active",
                    "comparison": "==",
                    "compare_to": 0
                }
            ]
        },
        "type": "origins:action_over_time",
        "interval": 1,
        "entity_action": {
            "type": "origins:if_else",
            "condition": {
                "type": "origins:resource",
                "resource": "*:*_buffer",
                "comparison": "<",
                "compare_to": 15
            },
            "if_action": {
                "type": "origins:and",
                "actions": [
                    {
                        "type": "origins:change_resource",
                        "resource": "*:*_buffer",
                        "change": -1,
                        "operation": "add"
                    },
                    {
                        "type": "origins:change_resource",
                        "resource": "ponyorigins:common/energy_level",
                        "change": 1,
                        "operation": "add"
                    }
                ]
            },
            "else_action": {
                "type": "origins:change_resource",
                "resource": "*:*_charged",
                "change": 1,
                "operation": "set"
            }
        }
    },
    "charged": {
        "type": "origins:resource",
        "min": 0,
        "max": 1,
        "start_value": 0
    },
    "charge": {
        "condition": {
            "type": "origins:and",
            "conditions": [
                {
                    "type": "origins:resource",
                    "resource": "*:*_cd",
                    "comparison": "==",
                    "compare_to": 0
                },
                {
                    "type": "origins:resource",
                    "resource": "ponyorigins:common/00_key_secondary_active",
                    "comparison": ">",
                    "compare_to": 0
                }
            ]
        },
        "type": "origins:action_over_time",
        "interval": 1,
        "entity_action": {
            "type": "origins:if_else",
            "condition": {
                "type": "origins:and",
                "conditions": [
                    {
                        "type": "origins:resource",
                        "resource": "ponyorigins:common/energy_level",
                        "comparison": ">",
                        "compare_to": 0
                    },
                    {
                        "type": "origins:resource",
                        "resource": "*:*_buffer",
                        "comparison": "<",
                        "compare_to": 15
                    }
                ]
            },
            "if_action": {
                "type": "origins:and",
                "actions": [
                    {
                        "type": "origins:change_resource",
                        "resource": "ponyorigins:common/energy_level",
                        "change": -1,
                        "operation": "add"
                    },
                    {
                        "type": "origins:change_resource",
                        "resource": "*:*_buffer",
                        "change": 1,
                        "operation": "add"
                    }
                ]
            }
        },
        "falling_action": {
            "type": "origins:if_else",
            "condition": {
                "type": "origins:and",
                "conditions": [
                    {
                        "type": "origins:resource",
                        "resource": "ponyorigins:common/energy_level",
                        "comparison": "==",
                        "compare_to": 0
                    },
                    {
                        "type": "origins:resource",
                        "resource": "*:*_buffer",
                        "comparison": "<",
                        "compare_to": 15
                    }
                ]
            },
            "if_action": {
                "type": "origins:and",
                "actions": [
                    {
                        "type": "origins:play_sound",
                        "sound": "block.fire.extinguish",
                        "volume": 0.1,
                        "pitch": 1
                    },
                    {
                        "type": "origins:change_resource",
                        "resource": "*:*_cd",
                        "change": 1,
                        "operation": "set"
                    }
                ]
            }
        }
    },
    "spark": {
        "condition": {
            "type": "origins:and",
            "conditions": [
                {
                    "type": "origins:resource",
                    "resource": "*:*_buffer",
                    "comparison": ">",
                    "compare_to": 0
                },
                {
                    "type": "origins:resource",
                    "resource": "*:*_cd",
                    "comparison": "==",
                    "compare_to": 0
                }
            ]
        },
        "type": "origins:action_over_time",
        "interval": 1,
        "entity_action": {
            "type": "origins:if_else",
            "condition": {
                "type": "origins:resource",
                "resource": "*:*_buffer",
                "comparison": "<",
                "compare_to": 15
            },
            "if_action": {
                "type": "origins:execute_command",
                "command": "execute anchored eyes positioned ^ ^0.5 ^0.5 run particle minecraft:instant_effect ~ ~ ~ 0 0.1 0 1 0 force"
            },
            "else_action": {
                "type": "origins:if_else",
                "condition": {
                    "inverted": true,
                    "type": "origins:submerged_in",
                    "fluid": "minecraft:water"
                },
                "if_action": {
                    "type": "origins:execute_command",
                    "command": "execute anchored eyes positioned ^ ^0.5 ^0.5 run particle minecraft:flame ~ ~ ~ 0.025 0.025 0.025 1 8 force"
                },
                "else_action": {
                    "type": "origins:execute_command",
                    "command": "execute anchored eyes positioned ^ ^0.5 ^0.5 run particle minecraft:bubble_column_up ~ ~ ~ 0 0.1 0 1 0 force"
                }
            }
        }
    }
}