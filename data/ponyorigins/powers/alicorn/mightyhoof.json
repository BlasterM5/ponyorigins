{
    "name": "Mighty Hoof",
    "description": "Attacks against your form are mere inconveniences. Wind up a kick to launch enemies away with explosive power!",
    "badges": [
        {
            "type": "origins:tooltip",
            "text": "Attack Strength +100 percent",
            "sprite": "minecraft:textures/item/diamond_sword"
        },
        {
            "type": "origins:tooltip",
            "text": "Unarmed Attack Damage +4",
            "sprite": "minecraft:textures/item/diamond_sword"
        },
        {
            "type": "origins:tooltip",
            "text": "Damage Resistance +50 percent",
            "sprite": "minecraft:textures/item/diamond_chestplate"
        },
        {
            "type": "origins:tooltip",
            "text": "Consumes Energy",
            "sprite": "minecraft:textures/item/light.png"
        },
        {
            "type": "origins:tooltip",
            "text": [
                "Smash: Hold [",
                {
                    "keybind": "key.origins.secondary_active"
                },
                "] to charge and attack"
            ],
            "sprite": "minecraft:textures/block/tnt_side.png"
        }
    ],
    "hidden": true,
    "type": "origins:multiple",
    "offense": {
        "condition": {
            "type": "origins:resource",
            "resource": "*:*_buffer",
            "comparison": ">",
            "compare_to": 0
        },
        "type": "origins:modify_damage_dealt",
        "damage_condition": {
            "type": "origins:amount",
            "comparison": ">",
            "compare_to": 0
        },
        "modifier": {
            "operation": "multiply_base_additive",
            "value": 1
        },
        "self_action": {
            "type": "origins:change_resource",
            "resource": "*:*_buffer",
            "change": -1,
            "operation": "add"
        }
    },
    "defense": {
        "condition": {
            "type": "origins:resource",
            "resource": "*:*_buffer",
            "comparison": ">",
            "compare_to": 0
        },
        "type": "origins:modify_damage_taken",
        "damage_condition": {
            "type": "origins:amount",
            "comparison": ">",
            "compare_to": 0
        },
        "modifier": {
            "operation": "multiply_base_additive",
            "value": -0.5
        },
        "self_action": {
            "type": "origins:change_resource",
            "resource": "*:*_buffer",
            "change": -1,
            "operation": "add"
        }
    },
    "buffer": {
        "type": "origins:resource",
        "min": 0,
        "max": 5,
        "start_value": 5,
        "min_action": {
            "type": "origins:if_else",
            "condition": {
                "type": "origins:resource",
                "resource": "ponyorigins:common/energy_level",
                "comparison": ">",
                "compare_to": 0
            },
            "if_action": {
                "type": "origins:and",
                "actions": [
                    {
                        "type": "origins:change_resource",
                        "resource": "ponyorigins:common/energy_level",
                        "change": -1,
                        "operation": "add"
                    },
                    {
                        "type": "origins:change_resource",
                        "resource": "*:*_buffer",
                        "change": 5,
                        "operation": "set"
                    }
                ]
            }
        }
    },
    "smash": {
        "condition": {
            "type": "origins:and",
            "conditions": [
                {
                    "type": "origins:resource",
                    "resource": "*:*_buffer_smash",
                    "comparison": "==",
                    "compare_to": 10
                },
                {
                    "type": "origins:resource",
                    "resource": "ponyorigins:common/00_key_secondary_active",
                    "comparison": ">",
                    "compare_to": 0
                }
            ]
        },
        "type": "origins:action_over_time",
        "interval": 1,
        "entity_action": {
            "type": "origins:raycast",
            "distance": 3,
            "block": true,
            "entity": true,
            "shape_type": "outline",
            "fluid_handling": "none",
            "bientity_action": {
                "type": "origins:and",
                "actions": [
                    {
                        "type": "origins:add_velocity",
                        "x": 0,
                        "y": 0.15,
                        "z": 1,
                        "client": false,
                        "server": true
                    },
                    {
                        "type": "origins:target_action",
                        "action": {
                            "type": "origins:and",
                            "actions": [
                                {
                                    "type": "origins:play_sound",
                                    "sound": "minecraft:entity.generic.explode",
                                    "volume": 0.5,
                                    "pitch": 1
                                },
                                {
                                    "type": "origins:spawn_particles",
                                    "particle": "minecraft:flash",
                                    "count": 1,
                                    "speed": 1,
                                    "force": true,
                                    "spread": {
                                        "x": 0.2,
                                        "y": 0.2,
                                        "z": 0.2
                                    }
                                },
                                {
                                    "type": "origins:damage",
                                    "amount": 4,
                                    "source": {
                                        "name": "player"
                                    }
                                }
                            ]
                        }
                    }
                ]
            },
            "block_action": {
                "type": "origins:if_else",
                "condition": {
                    "inverted": true,
                    "type": "origins:in_tag",
                    "tag": "origins:unphasable"
                },
                "if_action": {
                    "type": "origins:and",
                    "actions": [
                        {
                            "type": "apugli:destroy",
                            "drop_block": true
                        },
                        {
                            "type": "origins:execute_command",
                            "command": "playsound minecraft:entity.generic.explode block @a ~ ~ ~"
                        },
                        {
                            "type": "origins:execute_command",
                            "command": "particle flash ~ ~ ~ 0.2 0.2 0.2 1 1 force"
                        }
                    ]
                }
            },
            "hit_action": {
                "type": "origins:and",
                "actions": [
                    {
                        "type": "origins:change_resource",
                        "resource": "*:*_buffer_smash",
                        "change": 0,
                        "operation": "set"
                    },
                    {
                        "type": "origins:change_resource",
                        "resource": "*:*_cd_smash",
                        "change": 1,
                        "operation": "set"
                    },
                    {
                        "type": "origins:swing_hand",
                        "hand": "MAIN_HAND"
                    },
                    {
                        "type": "origins:exhaust",
                        "amount": 2
                    }
                ]
            }
        }
    },
    "buffer_smash": {
        "type": "origins:resource",
        "min": 0,
        "max": 10,
        "start_value": 0,
        "hud_render": {
            "should_render": true,
            "sprite_location": "origins:textures/gui/community/spiderkolo/resource_bar_02.png",
            "bar_index": 1,
            "condition": {
                "type": "origins:resource",
                "resource": "*:*_buffer_smash",
                "comparison": ">",
                "compare_to": 0
            }
        }
    },
    "cd_smash": {
        "type": "origins:resource",
        "min": 0,
        "max": 1,
        "start_value": 0
    },
    "cd_recharge_smash": {
        "condition": {
            "type": "origins:resource",
            "resource": "*:*_cd_smash",
            "comparison": "==",
            "compare_to": 1
        },
        "type": "origins:action_over_time",
        "interval": 10,
        "rising_action": {
            "type": "origins:change_resource",
            "resource": "*:*_cd_smash",
            "change": 0,
            "operation": "set"
        }
    },
    "buffer_charge": {
        "condition": {
            "type": "origins:or",
            "conditions": [
                {
                    "type": "origins:resource",
                    "resource": "*:*_buffer_smash",
                    "comparison": ">",
                    "compare_to": 0
                },
                {
                    "type": "origins:resource",
                    "resource": "ponyorigins:common/00_key_secondary_active",
                    "comparison": ">",
                    "compare_to": 0
                }
            ]
        },
        "type": "origins:action_over_time",
        "interval": 1,
        "entity_action": {
            "type": "origins:and",
            "actions": [
                {
                    "type": "origins:if_else",
                    "condition": {
                        "type": "origins:and",
                        "conditions": [
                            {
                                "type": "origins:resource",
                                "resource": "ponyorigins:common/00_key_secondary_active",
                                "comparison": ">",
                                "compare_to": 0
                            },
                            {
                                "type": "origins:resource",
                                "resource": "ponyorigins:common/00_empty_mainhand",
                                "comparison": "==",
                                "compare_to": 1
                            },
                            {
                                "type": "origins:food_level",
                                "comparison": ">",
                                "compare_to": 4
                            }
                        ]
                    },
                    "if_action": {
                        "type": "origins:change_resource",
                        "resource": "*:*_buffer_smash",
                        "change": 1,
                        "operation": "add"
                    },
                    "else_action": {
                        "type": "origins:change_resource",
                        "resource": "*:*_buffer_smash",
                        "change": -1,
                        "operation": "add"
                    }
                }
            ]
        }
    },
    "buffer_recharge": {
        "condition": {
            "type": "origins:resource",
            "resource": "ponyorigins:common/energy_level",
            "comparison": "==",
            "compare_to": 0
        },
        "type": "origins:action_over_time",
        "interval": 4,
        "falling_action": {
            "type": "origins:if_else",
            "condition": {
                "type": "origins:resource",
                "resource": "ponyorigins:common/energy_level",
                "comparison": ">",
                "compare_to": 0
            },
            "if_action": {
                "type": "origins:and",
                "actions": [
                    {
                        "type": "origins:change_resource",
                        "resource": "ponyorigins:common/energy_level",
                        "change": -1,
                        "operation": "add"
                    },
                    {
                        "type": "origins:change_resource",
                        "resource": "*:*_buffer",
                        "change": 5,
                        "operation": "set"
                    }
                ]
            }
        }
    }
}