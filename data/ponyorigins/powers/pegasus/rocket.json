{
    "name": "Rocket Mare",
    "description": "Hold secondary power to launch in the direction you are looking at incredible speed, impacting for explosive damage!\n\nWARNING: The impact may kill you!",
    "badges": [
        {
            "type": "origins:tooltip",
            "text": [
                "Hold [",
                {
                    "keybind": "key.origins.secondary_active"
                },
                "] to rocket forwards"
            ],
            "sprite": "textures/item/firework_rocket.png"
        }
    ],
    "type": "origins:multiple",
    "cd": {
        "type": "origins:resource",
        "min": 0,
        "max": 1,
        "start_value": 0
    },
    "cd_timer": {
        "condition": {
            "type": "origins:resource",
            "resource": "*:*_cd",
            "comparison": ">",
            "compare_to": 0
        },
        "type": "origins:action_over_time",
        "interval": 400,
        "entity_action": {
            "type": "origins:change_resource",
            "resource": "*:*_cd",
            "change": -1,
            "operation": "add"
        }
    },
    "antilag": {
        "type": "origins:resource",
        "min": 0,
        "max": 5,
        "start_value": 0
    },
    "sound_triggered": {
        "type": "origins:resource",
        "min": 0,
        "max": 1,
        "start_value": 0
    },
    "active": {
        "type": "origins:resource",
        "min": 0,
        "max": 1,
        "start_value": 0
    },
    "flight": {
        "condition": {
            "type": "origins:resource",
            "resource": "*:*_active",
            "comparison": "==",
            "compare_to": 1
        },
        "type": "origins:elytra_flight",
        "render_elytra": false
    },
    "crash_damage": {
        "condition": {
            "type": "origins:resource",
            "resource": "*:*_active",
            "comparison": "==",
            "compare_to": 1
        },
        "type": "origins:modify_damage_taken",
        "damage_condition": {
            "type": "origins:or",
            "conditions": [
                {
                    "type": "origins:in_tag",
                    "tag": "is_fall"
                },
                {
                    "type": "origins:name",
                    "name": "flyIntoWall"
                }
            ]
        },
        "modifier": {
            "operation": "multiply_total",
            "value": -0.99
        }
    },
    "crash_damage_detection": {
        "condition": {
            "type": "origins:resource",
            "resource": "*:*_active",
            "comparison": "==",
            "compare_to": 1
        },
        "type": "origins:self_action_when_hit",
        "damage_condition": {
            "type": "origins:or",
            "conditions": [
                {
                    "type": "origins:name",
                    "name": "flyIntoWall"
                },
                {
                    "type": "origins:in_tag",
                    "tag": "is_fall"
                }
            ]
        },
        "entity_action": {
            "type": "origins:change_resource",
            "resource": "*:*_explode",
            "change": 1,
            "operation": "set"
        },
        "cooldown": 1
    },
    "explode_logic": {
        "condition": {
            "type": "origins:resource",
            "resource": "*:*_explode",
            "comparison": "==",
            "compare_to": 1
        },
        "type": "origins:action_over_time",
        "interval": 1,
        "entity_action": {
            "type": "origins:change_resource",
            "resource": "*:*_explode",
            "change": 0,
            "operation": "set"
        },
        "rising_action": {
            "type": "origins:and",
            "actions": [
                {
                    "type": "origins:explode",
                    "power": 8,
                    "destruction_type": "break",
                    "damage_self": false
                },
                {
                    "type": "origins:area_of_effect",
                    "radius": 6,
                    "include_target": true,
                    "bientity_action": {
                        "type": "origins:damage",
                        "amount": 16,
                        "damage_type": "player_explosion"
                    }
                },
                {
                    "type": "origins:change_resource",
                    "resource": "*:*_cd",
                    "change": 1,
                    "operation": "set"
                },
                {
                    "type": "origins:apply_effect",
                    "effects": [
                        {
                            "effect": "nausea",
                            "duration": 200,
                            "amplifier": 0,
                            "is_ambient": true,
                            "show_particles": false,
                            "show_icon": true
                        },
                        {
                            "effect": "slowness",
                            "duration": 200,
                            "amplifier": 1,
                            "is_ambient": true,
                            "show_particles": false,
                            "show_icon": true
                        },
                        {
                            "effect": "weakness",
                            "duration": 400,
                            "amplifier": 1,
                            "is_ambient": true,
                            "show_particles": false,
                            "show_icon": true
                        },
                        {
                            "effect": "mining_fatigue",
                            "duration": 400,
                            "amplifier": 1,
                            "is_ambient": true,
                            "show_particles": false,
                            "show_icon": true
                        }
                    ]
                },
                {
                    "type": "origins:play_sound",
                    "sound": "entity.generic.explode",
                    "volume": 1,
                    "pitch": 1
                },
                {
                    "type": "origins:change_resource",
                    "resource": "*:*_explode",
                    "change": 0,
                    "operation": "set"
                }
            ]
        }
    },
    "explode": {
        "type": "origins:resource",
        "min": 0,
        "max": 1,
        "start_value": 0
    },
    "trigger": {
        "condition": {
            "type": "origins:and",
            "conditions": [
                {
                    "type": "origins:resource",
                    "resource": "ponyorigins:common/00_key_secondary_active",
                    "comparison": ">",
                    "compare_to": 0
                },
                {
                    "type": "origins:resource",
                    "resource": "*:*_cd",
                    "comparison": "==",
                    "compare_to": 0
                },
                {
                    "type": "origins:resource",
                    "resource": "ponyorigins:common/energy_level",
                    "comparison": ">",
                    "compare_to": 1
                },
                {
                    "type": "origins:fluid_height",
                    "fluid": "water",
                    "comparison": "==",
                    "compare_to": 0
                },
                {
                    "type": "origins:fluid_height",
                    "fluid": "lava",
                    "comparison": "==",
                    "compare_to": 0
                },
                {
                    "type": "origins:or",
                    "conditions": [
                        {
                            "type": "origins:and",
                            "conditions": [
                                {
                                    "inverted": true,
                                    "type": "origins:on_block",
                                    "block_condition": {
                                        "type": "origins:movement_blocking"
                                    }
                                },
                                {
                                    "type": "origins:resource",
                                    "resource": "*:*_sound_triggered",
                                    "comparison": "==",
                                    "compare_to": 0
                                }
                            ]
                        },
                        {
                            "type": "origins:resource",
                            "resource": "*:*_sound_triggered",
                            "comparison": "==",
                            "compare_to": 1
                        }
                    ]
                }
            ]
        },
        "type": "origins:action_over_time",
        "interval": 1,
        "rising_action": {
            "type": "origins:change_resource",
            "resource": "*:*_active",
            "change": 1,
            "operation": "set"
        },
        "falling_action": {
            "type": "origins:change_resource",
            "resource": "*:*_active",
            "change": 0,
            "operation": "set"
        }
    },
    "tick": {
        "type": "origins:action_over_time",
        "interval": 1,
        "entity_action": {
            "type": "origins:if_else",
            "condition": {
                "type": "origins:resource",
                "resource": "*:*_active",
                "comparison": "==",
                "compare_to": 1
            },
            "if_action": {
                "type": "origins:and",
                "actions": [
                    {
                        "type": "origins:if_else",
                        "condition": {
                            "type": "origins:resource",
                            "resource": "ponyorigins:common/energy_level",
                            "comparison": ">",
                            "compare_to": 1
                        },
                        "if_action": {
                            "type": "origins:and",
                            "actions": [
                                {
                                    "type": "origins:change_resource",
                                    "resource": "ponyorigins:common/energy_level",
                                    "change": -2,
                                    "operation": "add"
                                },
                                {
                                    "type": "origins:add_velocity",
                                    "x": 0,
                                    "y": 0,
                                    "z": 4,
                                    "space": "local",
                                    "client": true,
                                    "server": true,
                                    "set": true
                                },
                                {
                                    "type": "origins:spawn_particles",
                                    "particle": "instant_effect",
                                    "count": 16,
                                    "speed": 1,
                                    "force": true,
                                    "spread": {
                                        "x": 0.2,
                                        "y": 0.2,
                                        "z": 0.2
                                    },
                                    "offset_y": 0.5
                                },
                                {
                                    "type": "origins:if_else",
                                    "condition": {
                                        "type": "origins:resource",
                                        "resource": "*:*_sound_triggered",
                                        "comparison": "==",
                                        "compare_to": 0
                                    },
                                    "if_action": {
                                        "type": "origins:and",
                                        "actions": [
                                            {
                                                "type": "origins:play_sound",
                                                "sound": "entity.firework_rocket.launch",
                                                "volume": 1,
                                                "pitch": 1
                                            },
                                            {
                                                "type": "origins:change_resource",
                                                "resource": "*:*_sound_triggered",
                                                "change": 1,
                                                "operation": "set"
                                            }
                                        ]
                                    }
                                }
                            ]
                        }
                    },
                    {
                        "type": "origins:raycast",
                        "distance": 1.5,
                        "block": true,
                        "entity": true,
                        "shape_type": "outline",
                        "fluid_handling": "any",
                        "hit_action": {
                            "type": "origins:change_resource",
                            "resource": "*:*_explode",
                            "change": 1,
                            "operation": "set"
                        }
                    },
                    {
                        "type": "origins:if_else",
                        "condition": {
                            "type": "origins:on_block"
                        },
                        "if_action": {
                            "type": "origins:change_resource",
                            "resource": "*:*_explode",
                            "change": 1,
                            "operation": "set"
                        }
                    }
                ]
            },
            "else_action": {
                "type": "origins:if_else",
                "condition": {
                    "type": "origins:resource",
                    "resource": "*:*_sound_triggered",
                    "comparison": "==",
                    "compare_to": 1
                },
                "if_action": {
                    "type": "origins:change_resource",
                    "resource": "*:*_sound_triggered",
                    "change": 0,
                    "operation": "set"
                }
            }
        }
    }
}