{
    "name": "Strong Arms",
    "description": "You naturally punch harder, doing a little more damage, breaking through blocks barehanded faster, and knocking enemies back.",
    "badges": [
        {
            "type": "origins:tooltip",
            "text": "Unarmed: Attack Strength +100 percent",
            "sprite": "minecraft:textures/item/stone_sword.png"
        },
        {
            "type": "origins:tooltip",
            "text": "Unarmed: Block Break Speed +100 percent",
            "sprite": "minecraft:textures/item/stone_pickaxe.png"
        },
        {
            "type": "origins:tooltip",
            "text": [
                "Smash: Hold [",
                {
                    "keybind": "key.origins.secondary_active"
                },
                "] to charge and attack"
            ],
            "sprite": "minecraft:textures/block/tnt_side.png"
        }
    ],
    "type": "origins:multiple",
    "knockback": {
        "condition": {
            "type": "origins:resource",
            "resource": "ponyorigins:common/00_empty_mainhand",
            "comparison": "==",
            "compare_to": 1
        },
        "type": "origins:action_on_hit",
        "bientity_action": {
            "type": "origins:add_velocity",
            "z": 0.15,
            "client": true,
            "server": true
        },
        "cooldown": 10
    },
    "puch_harder": {
        "condition": {
            "type": "origins:resource",
            "resource": "ponyorigins:common/00_empty_mainhand",
            "comparison": "==",
            "compare_to": 1
        },
        "type": "origins:modify_damage_dealt",
        "modifier": {
            "operation": "multiply_base_additive",
            "value": 1
        }
    },
    "block_breaker": {
        "condition": {
            "type": "origins:resource",
            "resource": "ponyorigins:common/00_empty_mainhand",
            "comparison": "==",
            "compare_to": 1
        },
        "type": "origins:modify_break_speed",
        "modifier": {
            "operation": "multiply_base_additive",
            "value": 1
        }
    },
    "smash": {
        "condition": {
            "type": "origins:and",
            "conditions": [
                {
                    "type": "origins:resource",
                    "resource": "*:*_buffer_smash",
                    "comparison": "==",
                    "compare_to": 10
                },
                {
                    "type": "origins:resource",
                    "resource": "ponyorigins:common/00_key_primary_active",
                    "comparison": ">",
                    "compare_to": 0
                }
            ]
        },
        "type": "origins:action_over_time",
        "interval": 1,
        "entity_action": {
            "type": "origins:raycast",
            "distance": 3,
            "block": true,
            "entity": true,
            "shape_type": "outline",
            "fluid_handling": "none",
            "bientity_action": {
                "type": "origins:and",
                "actions": [
                    {
                        "type": "origins:add_velocity",
                        "x": 0,
                        "y": 0.15,
                        "z": 1,
                        "client": false,
                        "server": true
                    },
                    {
                        "type": "origins:target_action",
                        "action": {
                            "type": "origins:and",
                            "actions": [
                                {
                                    "type": "origins:play_sound",
                                    "sound": "minecraft:entity.generic.explode",
                                    "volume": 0.5,
                                    "pitch": 1
                                },
                                {
                                    "type": "origins:spawn_particles",
                                    "particle": "minecraft:flash",
                                    "count": 1,
                                    "speed": 1,
                                    "force": true,
                                    "spread": {
                                        "x": 0.2,
                                        "y": 0.2,
                                        "z": 0.2
                                    }
                                },
                                {
                                    "type": "origins:damage",
                                    "amount": 4,
                                    "damage_type": "player_attack"
                                }
                            ]
                        }
                    }
                ]
            },
            "block_action": {
                "type": "origins:if_else",
                "condition": {
                    "inverted": true,
                    "type": "origins:in_tag",
                    "tag": "origins:unphasable"
                },
                "if_action": {
                    "type": "origins:and",
                    "actions": [
                        {
                            "type": "apugli:destroy",
                            "drop_block": true
                        },
                        {
                            "type": "origins:execute_command",
                            "command": "playsound minecraft:entity.generic.explode block @a ~ ~ ~"
                        },
                        {
                            "type": "origins:execute_command",
                            "command": "particle flash ~ ~ ~ 0.2 0.2 0.2 1 1 force"
                        }
                    ]
                }
            },
            "hit_action": {
                "type": "origins:and",
                "actions": [
                    {
                        "type": "origins:change_resource",
                        "resource": "*:*_buffer_smash",
                        "change": 0,
                        "operation": "set"
                    },
                    {
                        "type": "origins:change_resource",
                        "resource": "*:*_cd_smash",
                        "change": 1,
                        "operation": "set"
                    },
                    {
                        "type": "origins:swing_hand",
                        "hand": "MAIN_HAND"
                    },
                    {
                        "type": "origins:exhaust",
                        "amount": 2
                    }
                ]
            }
        }
    },
    "buffer_smash": {
        "type": "origins:resource",
        "min": 0,
        "max": 10,
        "start_value": 0,
        "hud_render": {
            "should_render": true,
            "sprite_location": "origins:textures/gui/community/spiderkolo/resource_bar_02.png",
            "bar_index": 1,
            "condition": {
                "type": "origins:resource",
                "resource": "*:*_buffer_smash",
                "comparison": ">",
                "compare_to": 0
            }
        }
    },
    "cd_smash": {
        "type": "origins:resource",
        "min": 0,
        "max": 1,
        "start_value": 0
    },
    "cd_recharge_smash": {
        "condition": {
            "type": "origins:resource",
            "resource": "*:*_cd_smash",
            "comparison": "==",
            "compare_to": 1
        },
        "type": "origins:action_over_time",
        "interval": 10,
        "rising_action": {
            "type": "origins:change_resource",
            "resource": "*:*_cd_smash",
            "change": 0,
            "operation": "set"
        }
    },
    "buffer_charge": {
        "condition": {
            "type": "origins:or",
            "conditions": [
                {
                    "type": "origins:resource",
                    "resource": "*:*_buffer_smash",
                    "comparison": ">",
                    "compare_to": 0
                },
                {
                    "type": "origins:resource",
                    "resource": "ponyorigins:common/00_key_primary_active",
                    "comparison": ">",
                    "compare_to": 0
                }
            ]
        },
        "type": "origins:action_over_time",
        "interval": 1,
        "entity_action": {
            "type": "origins:if_else",
            "condition": {
                "type": "origins:and",
                "conditions": [
                    {
                        "type": "origins:resource",
                        "resource": "ponyorigins:common/00_key_primary_active",
                        "comparison": ">",
                        "compare_to": 0
                    },
                    {
                        "type": "origins:resource",
                        "resource": "ponyorigins:common/00_empty_mainhand",
                        "comparison": "==",
                        "compare_to": 1
                    },
                    {
                        "type": "origins:food_level",
                        "comparison": ">",
                        "compare_to": 4
                    }
                ]
            },
            "if_action": {
                "type": "origins:change_resource",
                "resource": "*:*_buffer_smash",
                "change": 1,
                "operation": "add"
            },
            "else_action": {
                "type": "origins:change_resource",
                "resource": "*:*_buffer_smash",
                "change": -1,
                "operation": "add"
            }
        }
    }
}