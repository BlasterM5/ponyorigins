{
    "name": "Wonderbolt Advancement Tracker",
    "description": "Tracks the Wonderbolt Advancement",
    "hidden": true,
    "type": "origins:multiple",
    "check_valid": {
        "type": "origins:action_on_callback",
        "execute_chosen_when_orb": true,
        "entity_action_added": {
            "type": "origins:if_else",
            "condition": {
                "type": "origins:or",
                "conditions": [
                    {
                        "type": "origins:advancement",
                        "advancement": "ponyorigins:special/wonderbolt"
                    },
                    {
                        "inverted": true,
                        "type": "origins:power",
                        "power": "ponyorigins:common/flight"
                    }
                ]
            },
            "if_action": {
                "type": "origins:revoke_power",
                "power": "ponyorigins:advancements/wonderbolt",
                "source": "ponyorigins:common/00"
            }
        }
    },
    "countdown": {
        "type": "origins:action_over_time",
        "interval": 20,
        "entity_action": {
            "type": "origins:if_else",
            "condition": {
                "type": "origins:resource",
                "resource": "*:*_timer",
                "comparison": ">",
                "compare_to": 0
            },
            "if_action": {
                "type": "origins:change_resource",
                "resource": "*:*_timer",
                "change": -1,
                "operation": "add"
            }
        }
    },
    "kill_triggers": {
        "condition": {
            "type": "origins:and",
            "conditions": [
                {
                    "inverted": true,
                    "type": "origins:on_block"
                },
                {
                    "type": "origins:or",
                    "conditions": [
                        {
                            "type": "origins:creative_flying"
                        },
                        {
                            "type": "origins:fall_flying"
                        }
                    ]
                }
            ]
        },
        "type": "origins:action_over_time",
        "interval": 1,
        "entity_action": {
            "type": "origins:if_else",
            "condition": {
                "type": "origins:on_block"
            },
            "if_action": {
                "type": "origins:change_resource",
                "resource": "*:*_timer",
                "change": 0,
                "operation": "set"
            }
        },
        "rising_action": {
            "type": "origins:change_resource",
            "resource": "*:*_timer",
            "change": 10,
            "operation": "set"
        }
    },
    "timer": {
        "type": "origins:resource",
        "min": 0,
        "max": 10,
        "start_value": 0,
        "min_action": {
            "type": "origins:change_resource",
            "resource": "*:*_counter",
            "change": 0,
            "operation": "set"
        }
    },
    "counter": {
        "type": "origins:resource",
        "min": 0,
        "max": 20,
        "start_value": 0,
        "max_action": {
            "type": "origins:and",
            "actions": [
                {
                    "type": "origins:execute_command",
                    "command": "advancement grant @s until ponyorigins:special/wonderbolt"
                },
                {
                    "type": "origins:revoke_power",
                    "power": "ponyorigins:advancements/wonderbolt",
                    "source": "ponyorigins:common/00"
                }
            ]
        }
    },
    "kill_count": {
        "condition": {
            "type": "origins:and",
            "conditions": [
                {
                    "type": "origins:resource",
                    "resource": "*:*_timer",
                    "comparison": ">",
                    "compare_to": 0
                },
                {
                    "inverted": true,
                    "type": "origins:on_block"
                }
            ]
        },
        "type": "origins:self_action_on_kill",
        "target_condition": {
            "type": "origins:in_tag",
            "tag": "ponyorigins:hostile_mobs"
        },
        "entity_action": {
            "type": "origins:change_resource",
            "resource": "*:*_counter",
            "change": 1,
            "operation": "add"
        },
        "cooldown": 0
    }
}