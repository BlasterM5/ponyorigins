{
    "name": "Taxi Advancement Tracker",
    "description": "This checks for the taxi advancement",
    "hidden": true,
    "type": "origins:multiple",
    "taxi_check": {
        "type": "origins:action_over_time",
        "interval": 20,
        "entity_action": {
            "type": "origins:if_else",
            "condition": {
                "type": "origins:and",
                "conditions": [
                    {
                        "type": "origins:riding",
                        "bientity_condition": {
                            "type": "origins:target_condition",
                            "condition": {
                                "type": "origins:entity_type",
                                "entity_type": "player"
                            }
                        }
                    },
                    {
                        "inverted": true,
                        "type": "origins:advancement",
                        "advancement": "ponyorigins:special/taxi"
                    }
                ]
            },
            "if_action": {
                "type": "origins:and",
                "actions": [
                    {
                        "type": "origins:execute_command",
                        "command": "advancement grant @s until ponyorigins:special/taxi"
                    },
                    {
                        "type": "origins:if_else",
                        "condition": {
                            "type": "origins:and",
                            "conditions": [
                                {
                                    "type": "origins:advancement",
                                    "advancement": "ponyorigins:special/taxi"
                                },
                                {
                                    "type": "origins:advancement",
                                    "advancement": "ponyorigins:special/air_taxi"
                                }
                            ]
                        },
                        "if_action": {
                            "type": "origins:revoke_power",
                            "power": "ponyorigins:advancements/taxi",
                            "source": "ponyorigins:common/00"
                        }
                    }
                ]
            }
        }
    },
    "air_taxi_check": {
        "type": "origins:action_over_time",
        "interval": 20,
        "entity_action": {
            "type": "origins:if_else",
            "condition": {
                "type": "origins:and",
                "conditions": [
                    {
                        "type": "origins:riding",
                        "bientity_condition": {
                            "type": "origins:target_condition",
                            "condition": {
                                "type": "origins:and",
                                "conditions": [
                                    {
                                        "type": "origins:creative_flying"
                                    },
                                    {
                                        "type": "origins:entity_type",
                                        "entity_type": "player"
                                    }
                                ]
                            }
                        }
                    },
                    {
                        "inverted": true,
                        "type": "origins:advancement",
                        "advancement": "ponyorigins:special/air_taxi"
                    }
                ]
            },
            "if_action": {
                "type": "origins:and",
                "actions": [
                    {
                        "type": "origins:execute_command",
                        "command": "advancement grant @s until ponyorigins:special/air_taxi"
                    },
                    {
                        "type": "origins:if_else",
                        "condition": {
                            "type": "origins:and",
                            "conditions": [
                                {
                                    "type": "origins:advancement",
                                    "advancement": "ponyorigins:special/taxi"
                                },
                                {
                                    "type": "origins:advancement",
                                    "advancement": "ponyorigins:special/air_taxi"
                                }
                            ]
                        },
                        "if_action": {
                            "type": "origins:revoke_power",
                            "power": "ponyorigins:advancements/taxi",
                            "source": "ponyorigins:common/00"
                        }
                    }
                ]
            }
        }
    }
}