{
    "name": "Flora",
    "description": "Hold your [primary/secondary] power while looking at a plant to help it grow.",
    "badges": [
        {
            "type": "origins:tooltip",
            "text": [
                "Primary Talent: Hold [",
                {
                    "keybind": "key.origins.primary_active"
                },
                "] to grow plants"
            ],
            "sprite": "minecraft:textures/block/dandelion.png"
        },
        {
            "type": "origins:tooltip",
            "text": [
                "Secondary Talent: Hold [",
                {
                    "keybind": "key.origins.secondary_active"
                },
                "] to grow plants"
            ],
            "sprite": "minecraft:textures/block/dandelion.png"
        }
    ],
    "type": "origins:multiple",
    "grow": {
        "condition": {
            "type": "origins:and",
            "conditions": [
                {
                    "type": "origins:resource",
                    "resource": "ponyorigins:common/energy_level",
                    "comparison": ">=",
                    "compare_to": 2
                },
                {
                    "type": "origins:or",
                    "conditions": [
                        {
                            "type": "origins:and",
                            "conditions": [
                                {
                                    "type": "origins:origin",
                                    "origin": "ponyorigins:unicorn/flora"
                                },
                                {
                                    "type": "origins:resource",
                                    "resource": "ponyorigins:common/key_primary_active",
                                    "comparison": ">",
                                    "compare_to": 0
                                }
                            ]
                        },
                        {
                            "type": "origins:and",
                            "conditions": [
                                {
                                    "type": "origins:origin",
                                    "origin": "ponyorigins:talents/flora"
                                },
                                {
                                    "type": "origins:resource",
                                    "resource": "ponyorigins:common/key_secondary_active",
                                    "comparison": ">",
                                    "compare_to": 0
                                }
                            ]
                        }
                    ]
                }
            ]
        },
        "type": "origins:action_over_time",
        "interval": 4,
        "entity_action": {
            "type": "origins:and",
            "actions": [
                {
                    "type": "origins:raycast",
                    "distance": 4,
                    "block": true,
                    "entity": true,
                    "shape_type": "outline",
                    "fluid_handling": "any",
                    "bientity_action": {
                        "type": "origins:target_action",
                        "action": {
                            "type": "origins:block_action_at",
                            "block_action": {
                                "type": "origins:bonemeal",
                                "effects": true
                            }
                        }
                    },
                    "block_action": {
                        "type": "origins:bonemeal",
                        "effects": true
                    },
                    "hit_action": {
                        "type": "origins:area_of_effect",
                        "radius": 8,
                        "include_target": true,
                        "bientity_action": {
                            "type": "origins:target_action",
                            "action": {
                                "type": "origins:block_action_at",
                                "block_action": {
                                    "type": "origins:bonemeal",
                                    "effects": true
                                }
                            }
                        }
                    }
                },
                {
                    "type": "origins:change_resource",
                    "resource": "ponyorigins:common/energy_level",
                    "change": -2,
                    "operation": "add"
                },
                {
                    "type": "origins:execute_command",
                    "command": "execute anchored eyes positioned ^ ^0.5 ^0.5 run particle minecraft:instant_effect ~ ~ ~ 0 0.1 0 1 0 force"
                }
            ]
        }
    }
}