{
    "name": "Invisibility",
    "description": "Press your [Primary/Secondary] Power to become invisible. Beware, full invisibility includes blindness.",
    "badges": [
        {
            "type": "origins:tooltip",
            "text": [
                "Press [",
                {
                    "keybind": "key.origins.primary_active"
                },
                "/",
                {
                    "keybind": "key.origins.secondary_active"
                },
                "] to toggle"
            ]
        }
    ],
    "type": "origins:multiple",
    "active": {
        "type": "origins:resource",
        "min": 0,
        "max": 1,
        "start_value": 0
    },
    "invisible": {
        "condition": {
            "type": "origins:and",
            "conditions": [
                {
                    "type": "origins:resource",
                    "resource": "*:*_active",
                    "comparison": "==",
                    "compare_to": 1
                },
                {
                    "type": "origins:resource",
                    "resource": "ponyorigins:common/energy_level",
                    "comparison": ">",
                    "compare_to": 0
                }
            ]
        },
        "type": "origins:invisibility",
        "render_armor": false,
        "render_outline": false
    },
    "invisible_to_mobs": {
        "condition": {
            "type": "origins:and",
            "conditions": [
                {
                    "type": "origins:resource",
                    "resource": "*:*_active",
                    "comparison": "==",
                    "compare_to": 1
                },
                {
                    "type": "origins:resource",
                    "resource": "ponyorigins:common/energy_level",
                    "comparison": ">",
                    "compare_to": 0
                }
            ]
        },
        "type": "apugli:mobs_ignore",
        "mob_condition": {
            "inverted": true,
            "type": "origins:in_tag",
            "tag": "ponyorigins:blind_mobs"
        }
    },
    "invisible_energy_cost": {
        "condition": {
            "type": "origins:and",
            "conditions": [
                {
                    "type": "origins:resource",
                    "resource": "*:*_active",
                    "comparison": "==",
                    "compare_to": 1
                },
                {
                    "type": "origins:resource",
                    "resource": "ponyorigins:common/energy_level",
                    "comparison": ">",
                    "compare_to": 0
                }
            ]
        },
        "type": "origins:action_over_time",
        "interval": 6,
        "entity_action": {
            "type": "origins:change_resource",
            "resource": "ponyorigins:common/energy_level",
            "change": -1,
            "operation": "add"
        },
        "falling_action": {
            "type": "origins:if_else",
            "condition": {
                "type": "origins:resource",
                "resource": "ponyorigins:common/energy_level",
                "comparison": "==",
                "compare_to": 0
            },
            "if_action": {
                "type": "origins:and",
                "actions": [
                    {
                        "type": "origins:change_resource",
                        "resource": "*:*_active",
                        "change": 0,
                        "operation": "set"
                    },
                    {
                        "type": "origins:clear_effect",
                        "effect": "blindness"
                    }
                ]
            }
        }
    },
    "trigger": {
        "condition": {
            "type": "origins:and",
            "conditions": [
                {
                    "type": "origins:or",
                    "conditions": [
                        {
                            "type": "origins:and",
                            "conditions": [
                                {
                                    "type": "origins:origin",
                                    "origin": "ponyorigins:unicorn/vanish"
                                },
                                {
                                    "type": "origins:resource",
                                    "resource": "ponyorigins:common/00_key_primary_active",
                                    "comparison": ">",
                                    "compare_to": 0
                                }
                            ]
                        },
                        {
                            "type": "origins:and",
                            "conditions": [
                                {
                                    "type": "origins:origin",
                                    "origin": "ponyorigins:talents/vanish"
                                },
                                {
                                    "type": "origins:resource",
                                    "resource": "ponyorigins:common/00_key_secondary_active",
                                    "comparison": ">",
                                    "compare_to": 0
                                }
                            ]
                        }
                    ]
                },
                {
                    "type": "origins:resource",
                    "resource": "ponyorigins:common/energy_level",
                    "comparison": ">",
                    "compare_to": 0
                }
            ]
        },
        "type": "origins:action_over_time",
        "interval": 1,
        "rising_action": {
            "type": "origins:if_else",
            "condition": {
                "type": "origins:resource",
                "resource": "*:*_active",
                "comparison": "==",
                "compare_to": 0
            },
            "if_action": {
                "type": "origins:and",
                "actions": [
                    {
                        "type": "origins:change_resource",
                        "resource": "*:*_active",
                        "change": 1,
                        "operation": "set"
                    },
                    {
                        "type": "origins:apply_effect",
                        "effect": {
                            "effect": "blindness",
                            "duration": -1,
                            "amplifier": 9,
                            "is_ambient": true,
                            "show_particles": false,
                            "show_icon": false
                        }
                    }
                ]
            },
            "else_action": {
                "type": "origins:and",
                "actions": [
                    {
                        "type": "origins:change_resource",
                        "resource": "*:*_active",
                        "change": 0,
                        "operation": "set"
                    },
                    {
                        "type": "origins:clear_effect",
                        "effect": "blindness"
                    }
                ]
            }
        }
    }
}