{
    "name": "Invisibility",
    "description": "Press your [Primary/Secondary] Power to become invisible. Beware, full invisibility includes blindness.",
    "badges": [
        {
            "type": "origins:tooltip",
            "text": [
                "Press [",
                {
                    "keybind": "key.origins.primary_active"
                },
                "/",
                {
                    "keybind": "key.origins.secondary_active"
                },
                "] to toggle"
            ],
            "sprite": "minecraft:textures/item/enchanted_book.png"
        }
    ],
    "type": "origins:multiple",
    "active": {
        "type": "origins:resource",
        "min": 0,
        "max": 1,
        "start_value": 0
    },
    "invisible": {
        "condition": {
            "type": "origins:and",
            "conditions": [
                {
                    "type": "origins:resource",
                    "resource": "*:*_active",
                    "comparison": "==",
                    "compare_to": 1
                },
                {
                    "type": "origins:resource",
                    "resource": "ponyorigins:common/energy_level",
                    "comparison": ">",
                    "compare_to": 0
                }
            ]
        },
        "type": "origins:invisibility",
        "render_armor": false
    },
    "invisible_to_mobs": {
        "condition": {
            "type": "origins:and",
            "conditions": [
                {
                    "type": "origins:resource",
                    "resource": "*:*_active",
                    "comparison": "==",
                    "compare_to": 1
                },
                {
                    "type": "origins:resource",
                    "resource": "ponyorigins:common/energy_level",
                    "comparison": ">",
                    "compare_to": 0
                }
            ]
        },
        "type": "apugli:mobs_ignore",
        "mob_condition": {
            "inverted": true,
            "type": "origins:in_tag",
            "tag": "ponyorigins:blind_mobs"
        }
    },
    "invisible_energy_cost": {
        "condition": {
            "type": "origins:and",
            "conditions": [
                {
                    "type": "origins:resource",
                    "resource": "*:*_active",
                    "comparison": "==",
                    "compare_to": 1
                },
                {
                    "type": "origins:resource",
                    "resource": "ponyorigins:common/energy_level",
                    "comparison": ">",
                    "compare_to": 0
                }
            ]
        },
        "type": "origins:action_over_time",
        "interval": 6,
        "entity_action": {
            "type": "origins:change_resource",
            "resource": "ponyorigins:common/energy_level",
            "change": -1,
            "operation": "add"
        },
        "falling_action": {
            "type": "origins:if_else",
            "condition": {
                "type": "origins:resource",
                "resource": "ponyorigins:common/energy_level",
                "comparison": "==",
                "compare_to": 0
            },
            "if_action": {
                "type": "origins:and",
                "actions": [
                    {
                        "type": "origins:change_resource",
                        "resource": "*:*_active",
                        "change": 0,
                        "operation": "set"
                    },
                    {
                        "type": "origins:clear_effect",
                        "effect": "blindness"
                    }
                ]
            }
        }
    },
    "blindness_active": {
        "condition": {
            "type": "origins:resource",
            "resource": "*:*_active",
            "comparison": "==",
            "compare_to": 1
        },
        "type": "origins:action_over_time",
        "interval": 20,
        "entity_action": {
            "type": "origins:apply_effect",
            "effect": {
                "effect": "blindness",
                "duration": 200,
                "amplifier": 9,
                "is_ambient": true,
                "show_particles": false,
                "show_icon": false
            }
        },
        "rising_action": {
            "type": "origins:apply_effect",
            "effect": {
                "effect": "blindness",
                "duration": 200,
                "amplifier": 9,
                "is_ambient": true,
                "show_particles": false,
                "show_icon": false
            }
        },
        "falling_action": {
            "type": "origins:clear_effect",
            "effect": "blindness"
        }
    },
    "trigger_primary": {
        "condition": {
            "type": "origins:and",
            "conditions": [
                {
                    "type": "origins:resource",
                    "resource": "ponyorigins:common/energy_level",
                    "comparison": ">",
                    "compare_to": 0
                },
                {
                    "type": "origins:origin",
                    "origin": "ponyorigins:unicorn/vanish"
                }
            ]
        },
        "type": "origins:active_self",
        "entity_action": {
            "type": "origins:if_else",
            "condition": {
                "type": "origins:resource",
                "resource": "*:*_active",
                "comparison": "==",
                "compare_to": 0
            },
            "if_action": {
                "type": "origins:change_resource",
                "resource": "*:*_active",
                "change": 1,
                "operation": "set"
            },
            "else_action": {
                "type": "origins:change_resource",
                "resource": "*:*_active",
                "change": 0,
                "operation": "set"
            }
        },
        "cooldown": 10,
        "key": {
            "key": "key.origins.primary_active"
        }
    },
    "trigger_secondary": {
        "condition": {
            "type": "origins:and",
            "conditions": [
                {
                    "type": "origins:resource",
                    "resource": "ponyorigins:common/energy_level",
                    "comparison": ">",
                    "compare_to": 0
                },
                {
                    "type": "origins:origin",
                    "origin": "ponyorigins:talents/vanish"
                }
            ]
        },
        "type": "origins:active_self",
        "entity_action": {
            "type": "origins:if_else",
            "condition": {
                "type": "origins:resource",
                "resource": "*:*_active",
                "comparison": "==",
                "compare_to": 0
            },
            "if_action": {
                "type": "origins:change_resource",
                "resource": "*:*_active",
                "change": 1,
                "operation": "set"
            },
            "else_action": {
                "type": "origins:change_resource",
                "resource": "*:*_active",
                "change": 0,
                "operation": "set"
            }
        },
        "cooldown": 10,
        "key": {
            "key": "key.origins.secondary_active"
        }
    }
}