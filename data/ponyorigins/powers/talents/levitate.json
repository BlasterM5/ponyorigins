{
    "name": "Telekinetic Flight",
    "description": "Jump while in the air to fly around using your telekinesis. Not as efficient or as fast as having wings, but better than no flight at all.\n\nPress your [primary/secondary] power to manually disable/enable this ability to use flight equipment instead.",
    "badges": [
        {
            "type": "origins:tooltip",
            "text": [
                "Jump while in the air to fly. Press [",
                {
                    "keybind": "key.origins.primary_active"
                },
                "/",
                {
                    "keybind": "key.origins.secondary_active"
                },
                "] to toggle"
            ],
            "sprite": "textures/item/feather.png"
        }
    ],
    "type": "origins:multiple",
    "active": {
        "type": "origins:resource",
        "min": 0,
        "max": 1,
        "start_value": 0
    },
    "creative": {
        "condition": {
            "type": "origins:resource",
            "resource": "*:*_active",
            "comparison": "==",
            "compare_to": 1
        },
        "type": "origins:creative_flight"
    },
    "exhaustion": {
        "condition": {
            "type": "origins:resource",
            "resource": "*:*_active",
            "comparison": "==",
            "compare_to": 1
        },
        "type": "origins:action_over_time",
        "interval": 6,
        "entity_action": {
            "type": "origins:if_else",
            "condition": {
                "type": "origins:creative_flying"
            },
            "if_action": {
                "type": "origins:if_else",
                "condition": {
                    "type": "origins:sprinting"
                },
                "if_action": {
                    "type": "origins:change_resource",
                    "resource": "ponyorigins:common/energy_level",
                    "change": -2,
                    "operation": "add"
                },
                "else_action": {
                    "type": "origins:change_resource",
                    "resource": "ponyorigins:common/energy_level",
                    "change": -1,
                    "operation": "add"
                }
            }
        }
    },
    "slower_than_wings": {
        "condition": {
            "type": "origins:and",
            "conditions": [
                {
                    "type": "origins:creative_flying"
                },
                {
                    "inverted": true,
                    "type": "origins:sneaking"
                },
                {
                    "type": "origins:resource",
                    "resource": "*:*_active",
                    "comparison": "==",
                    "compare_to": 1
                }
            ]
        },
        "type": "origins:modify_air_speed",
        "modifier": {
            "operation": "multiply_base_additive",
            "value": -0.6
        }
    },
    "slower_than_wings_horizontal": {
        "condition": {
            "type": "origins:and",
            "conditions": [
                {
                    "type": "origins:creative_flying"
                },
                {
                    "type": "origins:resource",
                    "resource": "*:*_active",
                    "comparison": "==",
                    "compare_to": 1
                }
            ]
        },
        "type": "origins:modify_velocity",
        "modifier": {
            "operation": "multiply_base_additive",
            "value": -0.6
        },
        "axes": [
            "x",
            "z"
        ]
    },
    "toggle": {
        "condition": {
            "type": "origins:or",
            "conditions": [
                {
                    "type": "origins:and",
                    "conditions": [
                        {
                            "inverted": true,
                            "type": "origins:gamemode",
                            "gamemode": "creative"
                        },
                        {
                            "type": "origins:resource",
                            "resource": "ponyorigins:common/energy_level",
                            "comparison": ">",
                            "compare_to": 0
                        },
                        {
                            "type": "origins:origin",
                            "origin": "ponyorigins:talents/levitate",
                            "layer": "ponyorigins:primary_talent"
                        },
                        {
                            "type": "origins:resource",
                            "resource": "ponyorigins:common/00_key_primary_active",
                            "comparison": ">",
                            "compare_to": 0
                        }
                    ]
                },
                {
                    "type": "origins:and",
                    "conditions": [
                        {
                            "inverted": true,
                            "type": "origins:gamemode",
                            "gamemode": "creative"
                        },
                        {
                            "type": "origins:resource",
                            "resource": "ponyorigins:common/energy_level",
                            "comparison": ">",
                            "compare_to": 0
                        },
                        {
                            "type": "origins:origin",
                            "origin": "ponyorigins:talents/levitate",
                            "layer": "ponyorigins:secondary_talent"
                        },
                        {
                            "type": "origins:resource",
                            "resource": "ponyorigins:common/00_key_secondary_active",
                            "comparison": ">",
                            "compare_to": 0
                        }
                    ]
                }
            ]
        },
        "type": "origins:action_over_time",
        "interval": 1,
        "rising_action": {
            "type": "origins:if_else",
            "condition": {
                "type": "origins:resource",
                "resource": "*:*_active",
                "comparison": "==",
                "compare_to": 1
            },
            "if_action": {
                "type": "origins:change_resource",
                "resource": "*:*_active",
                "change": 0,
                "operation": "set"
            },
            "else_action": {
                "type": "origins:change_resource",
                "resource": "*:*_active",
                "change": 1,
                "operation": "set"
            }
        }
    }
}