{
    "name": "Shadow Walk",
    "description": "Press your primary power to become an intangible shadow, and haunt your quarrel through walls and other solid objects, immune to harm!\n\nWarning: Fails in bright light!",
    "badges": [
        {
            "type": "origins:tooltip",
            "text": [
                "Press [",
                {
                    "keybind": "key.origins.primary_active"
                },
                "] to toggle. Jump while in the air to fly"
            ],
            "sprite": "minecraft:textures/mob_effect/darkness.png"
        },
        {
            "type": "origins:tooltip",
            "text": "Disabled when above light level 0.55",
            "sprite": "minecraft:textures/mob_effect/darkness.png"
        }
    ],
    "type": "origins:multiple",
    "flight": {
        "condition": {
            "type": "origins:resource",
            "resource": "*:*_active",
            "comparison": "==",
            "compare_to": 1
        },
        "type": "origins:creative_flight"
    },
    "drain": {
        "condition": {
            "type": "origins:resource",
            "resource": "*:*_active",
            "comparison": "==",
            "compare_to": 1
        },
        "type": "origins:action_over_time",
        "interval": 3,
        "entity_action": {
            "type": "origins:and",
            "actions": [
                {
                    "type": "origins:if_else",
                    "condition": {
                        "type": "origins:sprinting"
                    },
                    "if_action": {
                        "type": "origins:change_resource",
                        "resource": "ponyorigins:common/energy_level",
                        "change": -2,
                        "operation": "add"
                    },
                    "else_action": {
                        "type": "origins:change_resource",
                        "resource": "ponyorigins:common/energy_level",
                        "change": -1,
                        "operation": "add"
                    }
                },
                {
                    "type": "origins:if_else",
                    "condition": {
                        "type": "origins:in_block",
                        "block_condition": {
                            "type": "origins:movement_blocking"
                        }
                    },
                    "if_action": {
                        "type": "origins:change_resource",
                        "resource": "ponyorigins:common/energy_level",
                        "change": -2,
                        "operation": "add"
                    }
                }
            ]
        },
        "rising_action": {
            "type": "origins:play_sound",
            "sound": "minecraft:entity.illusioner.mirror_move",
            "volume": 1,
            "pitch": 1
        },
        "falling_action": {
            "type": "origins:play_sound",
            "sound": "minecraft:entity.illusioner.mirror_move",
            "volume": 1,
            "pitch": 1
        }
    },
    "phantom": {
        "condition": {
            "type": "origins:resource",
            "resource": "*:*_active",
            "comparison": "==",
            "compare_to": 1
        },
        "type": "origins:phasing",
        "block_condition": {
            "inverted": true,
            "type": "origins:in_tag",
            "tag": "origins:unphasable"
        },
        "render_type": "blindness",
        "view_distance": 10
    },
    "flight_speed": {
        "condition": {
            "type": "origins:resource",
            "resource": "*:*_active",
            "comparison": "==",
            "compare_to": 1
        },
        "type": "origins:modify_air_speed",
        "modifier": {
            "operation": "multiply_base_additive",
            "value": -0.5
        }
    },
    "render": {
        "condition": {
            "type": "origins:resource",
            "resource": "*:*_active",
            "comparison": "==",
            "compare_to": 1
        },
        "type": "origins:invisibility",
        "render_armor": false,
        "render_outline": true
    },
    "no_phasing_damage": {
        "condition": {
            "type": "origins:resource",
            "resource": "*:*_active",
            "comparison": "==",
            "compare_to": 1
        },
        "type": "origins:modify_damage_taken",
        "modifier": {
            "operation": "set_total",
            "value": 0
        }
    },
    "no_phasing_attacks": {
        "condition": {
            "type": "origins:resource",
            "resource": "*:*_active",
            "comparison": "==",
            "compare_to": 1
        },
        "type": "origins:modify_damage_dealt",
        "modifier": {
            "operation": "set_total",
            "value": 0
        }
    },
    "no_mining": {
        "condition": {
            "type": "origins:resource",
            "resource": "*:*_active",
            "comparison": "==",
            "compare_to": 1
        },
        "type": "origins:modify_break_speed",
        "modifier": {
            "operation": "set_total",
            "value": 0
        }
    },
    "no_block_interaction": {
        "condition": {
            "type": "origins:resource",
            "resource": "*:*_active",
            "comparison": "==",
            "compare_to": 1
        },
        "type": "origins:prevent_block_use",
        "block_condition": {
            "type": "origins:constant",
            "value": true
        }
    },
    "no_entity_interaction": {
        "condition": {
            "type": "origins:resource",
            "resource": "*:*_active",
            "comparison": "==",
            "compare_to": 1
        },
        "type": "origins:prevent_entity_use"
    },
    "deactivate": {
        "condition": {
            "type": "origins:and",
            "conditions": [
                {
                    "type": "origins:resource",
                    "resource": "*:*_active",
                    "comparison": "==",
                    "compare_to": 1
                },
                {
                    "type": "origins:or",
                    "conditions": [
                        {
                            "inverted": true,
                            "type": "origins:resource",
                            "resource": "ponyorigins:common/energy_level",
                            "comparison": ">",
                            "compare_to": 0
                        },
                        {
                            "type": "origins:brightness",
                            "comparison": ">=",
                            "compare_to": 0.56
                        }
                    ]
                }
            ]
        },
        "type": "origins:action_over_time",
        "interval": 1,
        "rising_action": {
            "type": "origins:change_resource",
            "resource": "*:*_active",
            "change": 0,
            "operation": "set"
        }
    },
    "trigger": {
        "type": "origins:active_self",
        "entity_action": {
            "type": "origins:if_else",
            "condition": {
                "type": "origins:and",
                "conditions": [
                    {
                        "type": "origins:resource",
                        "resource": "ponyorigins:common/energy_level",
                        "comparison": ">",
                        "compare_to": 0
                    },
                    {
                        "type": "origins:brightness",
                        "comparison": "<",
                        "compare_to": 0.56
                    },
                    {
                        "type": "origins:resource",
                        "resource": "*:*_active",
                        "comparison": "==",
                        "compare_to": 0
                    }
                ]
            },
            "if_action": {
                "type": "origins:change_resource",
                "resource": "*:*_active",
                "change": 1,
                "operation": "set"
            },
            "else_action": {
                "type": "origins:change_resource",
                "resource": "*:*_active",
                "change": 0,
                "operation": "set"
            }
        },
        "cooldown": 5,
        "key": {
            "key": "key.origins.primary_active"
        }
    },
    "active": {
        "type": "origins:resource",
        "min": 0,
        "max": 1,
        "start_value": 0
    },
    "invisible": {
        "condition": {
            "type": "origins:resource",
            "resource": "*:*_active",
            "comparison": "==",
            "compare_to": 1
        },
        "type": "apugli:mobs_ignore"
    },
    "shadow_particles": {
        "condition": {
            "type": "origins:resource",
            "resource": "*:*_active",
            "comparison": "==",
            "compare_to": 1
        },
        "type": "origins:action_over_time",
        "interval": 1,
        "entity_action": {
            "type": "origins:spawn_particles",
            "particle": "minecraft:ash",
            "count": 16,
            "speed": 0.1,
            "force": true,
            "spread": {
                "x": 0.1,
                "y": 0.1,
                "z": 0.1
            },
            "offset_y": 0.5
        }
    }
}